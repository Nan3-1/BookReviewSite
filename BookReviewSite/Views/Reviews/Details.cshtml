@using BookReviewSite.Data.Entities
@model Review

@{
    ViewData["Title"] = "Review Details";
}

<h1>Review Details</h1>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewerName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewContent)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewRating)/5
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ReviewId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.ReviewId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>