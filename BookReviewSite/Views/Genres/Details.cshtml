﻿@using BookReviewSite.Data.Entities
@model Genre

@{
    ViewData["Title"] = "Genre Details";
}
<head>
    <link rel="stylesheet" href="~/css/ViewStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-info-circle me-2"></i>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary p-2 fs-6">
                                @Html.DisplayFor(model => model.Name)
                            </span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model?.GenreId" class="btn btn-primary">
                                <i class="fas fa-edit me-1"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model?.GenreId" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>