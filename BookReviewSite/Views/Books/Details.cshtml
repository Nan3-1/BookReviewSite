@model BookReviewSite.Data.Entities.Book

@{
    ViewBag.Title = "Book Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h2 class="h4 mb-0">@Model.Title</h2>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="bg-light p-3 rounded" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-book-open fa-4x text-muted"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Author:</dt>
                                <dd class="col-sm-8">@Model.Author?.FullName</dd>

                                <dt class="col-sm-4">Published:</dt>
                                <dd class="col-sm-8">@(Model.PublicationDate?.ToString("yyyy") ?? "Unknown")</dd>

                                <dt class="col-sm-4">Genres:</dt>
                                <dd class="col-sm-8">
                                    @foreach (var genre in Model.Genres)
                                    {
                                        <span class="badge badge-secondary">@genre.Name</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Rating:</dt>
                                <dd class="col-sm-8">
                                    <div class="text-warning">
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star"></i>
                                        <i class="fas fa-star-half-alt"></i>
                                        <i class="far fa-star"></i>
                                        <span class="text-dark ml-2">(4.3)</span>
                                    </div>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="mb-3">
                        <h5 class="border-bottom pb-2">Description</h5>
                        <p>@(Model.Description ?? "No description available.")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Edit", new { id = Model.BookId })"
                       class="btn btn-primary btn-block mb-3">
                        <i class="fas fa-edit mr-2"></i>Edit Book
                    </a>
                    <a href="@Url.Action("Index")"
                       class="btn btn-outline-secondary btn-block">
                        <i class="fas fa-arrow-left mr-2"></i>Back to List
                    </a>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Reading Status</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-success">
                            <i class="fas fa-bookmark mr-2"></i>Want to Read
                        </button>
                        <button class="btn btn-outline-info">
                            <i class="fas fa-book-open mr-2"></i>Currently Reading
                        </button>
                        <button class="btn btn-outline-warning">
                            <i class="fas fa-heart mr-2"></i>Add to Favorites
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
            margin-right: 0.3em;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}