@model BookReviewSite.Data.Entities.Book

@{
    ViewBag.Title = "Delete Book";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="h4 mb-0">Delete Book</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this book?</h3>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle mr-2"></i>
                        This action cannot be undone. All reviews and ratings for this book will also be deleted.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Title:</dt>
                        <dd class="col-sm-9">@Model.Title</dd>

                        <dt class="col-sm-3">Author:</dt>
                        <dd class="col-sm-9">@Model.Author?.FullName</dd>

                        <dt class="col-sm-3">Genres:</dt>
                        <dd class="col-sm-9">
                            @foreach (var genre in Model.Genres)
                            {
                                <span class="badge badge-secondary">@genre.Name</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="BookId" />

                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt mr-2"></i>Confirm Delete
                            </button>
                            <a href="@Url.Action("Details", new { id = Model.BookId })" class="btn btn-outline-secondary">
                                <i class="fas fa-times mr-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .border-danger {
            border-width: 2px;
        }

        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}