﻿@model IEnumerable<BookReviewSite.Data.Entities.Book>

@{
    ViewBag.Title = "Currently Reading";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Currently Reading</h1>
        <a href="@Url.Action("Index", "Books")" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left mr-2"></i>Back to Catalog
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title">@book.Title</h5>
                                    <h6 class="card-subtitle mb-3 text-muted">by @book.Author?.Name</h6>
                                </div>
                                <span class="badge badge-info">
                                    <i class="fas fa-book-open mr-1"></i>Reading
                                </span>
                            </div>

                            <div class="progress mb-3" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: 45%;"
                                     aria-valuenow="45" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>

                            <div class="mb-3">
                                @foreach (var genre in book.Genres.Take(2))
                                {
                                    <span class="badge badge-primary">@genre.Name</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <button class="btn btn-sm btn-outline-success">
                                <i class="fas fa-check mr-1"></i>Mark as Finished
                            </button>
                            <a href="@Url.Action("Details", "Books", new { id = book.BookId })"
                               class="btn btn-sm btn-outline-primary float-right">
                                <i class="fas fa-info-circle mr-1"></i>Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info shadow">
            <i class="fas fa-info-circle mr-2"></i>
            You're not currently reading any books. Find something interesting in our
            <a href="@Url.Action("Index", "Books")" class="alert-link">book catalog</a>.
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.3s ease;
            border-radius: 0.5rem;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .badge {
            font-size: 0.85em;
            padding: 0.35em 0.65em;
        }

        .progress {
            border-radius: 4px;
            background-color: #e9ecef;
        }
    </style>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
}