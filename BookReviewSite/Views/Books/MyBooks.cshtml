@model BookReviewSite.ViewModels.MyBooksViewModel

@{
    ViewData["Title"] = "My Books";
}

<div class="container my-books">
    <h1>My Books</h1>

    <div class="row">
        <!-- Favorite Books -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Favorite Books</h3>
                </div>
                <div class="card-body">
                    @if (Model.FavoriteBooks.Any())
                    {
                        <ul class="list-group">
                            @foreach (var book in Model.FavoriteBooks)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a asp-action="Details" asp-route-id="@book.BookId">@book.Title</a>
                                    <form asp-action="ToggleFavorite" asp-route-bookId="@book.BookId" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No favorite books yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Currently Reading -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3>Currently Reading</h3>
                </div>
                <div class="card-body">
                    @if (Model.CurrentlyReading.Any())
                    {
                        <ul class="list-group">
                            @foreach (var book in Model.CurrentlyReading)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a asp-action="Details" asp-route-id="@book.BookId">@book.Title</a>
                                    <div class="btn-group">
                                        <form asp-action="RemoveFromList" asp-route-bookId="@book.BookId" method="post">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No books currently reading.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Want to Read -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Want to Read</h3>
                </div>
                <div class="card-body">
                    @if (Model.WantToRead.Any())
                    {
                        <ul class="list-group">
                            @foreach (var book in Model.WantToRead)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a asp-action="Details" asp-route-id="@book.BookId">@book.Title</a>
                                    <div class="btn-group">
                                        <form asp-action="RemoveFromList" asp-route-bookId="@book.BookId" method="post">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No books in want to read list.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
