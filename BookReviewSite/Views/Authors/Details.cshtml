@using BookReviewSite.Data.Entities
@model Author

@{
    ViewData["Title"] = "Author Details";
}

<head>
    <link rel="stylesheet" href="~/css/ViewStyle.css" asp-append-version="true" />

</head>

<div class="card">
    <div class="card-header">
        <h2>Author Details</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LastName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LastName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Autobiography)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Autobiography)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.AuthorId" class="btn btn-primary me-2">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.AuthorId" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i>Delete
                </a>
            </div>
        </div>
    </div>
</div>